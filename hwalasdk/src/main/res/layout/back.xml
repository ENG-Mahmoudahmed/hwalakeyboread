<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:layout_gravity="center">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/positive" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/iv_back_m_top"
        android:paddingTop="20dp"
        >
        <ImageView
            android:id="@+id/im_back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/iv_back_h_w"
            android:src="@drawable/ic_back"></ImageView>
        <TextView
            android:id="@+id/tv_title"
            style="@style/text_view_style"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="3"
            android:textSize="14dp"
            android:textColor="#4c5762"
            android:text="@string/tv_select"></TextView>
        <ImageView
            android:id="@+id/im_change_keyboeard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/iv_back_h_w"
            android:src="@drawable/ic_change_keyboard"></ImageView>
        <ImageView

            android:id="@+id/im_hide_keyboeard"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/iv_back_h_w"
            android:src="@drawable/ic_arrow_down_type"></ImageView>
    </LinearLayout>
</LinearLayout>